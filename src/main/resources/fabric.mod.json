{
  "schemaVersion": 1,
  "id": "seedmapper",
  "version": "${version}",

  "name": "SeedMapper",
  "description": "In-game Minecraft Fabric mod that allows you to do various things with the world seed.",
  "authors": [
    "xpple"
  ],
  "contact": {
    "homepage": "https://xpple.dev/",
    "sources": "https://github.com/xpple/SeedMapper/"
  },

  "license": "LGPL-3.0-or-later",
  "icon": "assets/seedmapper/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.xpple.seedmapper.SeedMapper"
    ]
  },
  "mixins": [
    "mixins.seedmapper.json"
  ],
  "accessWidener": "seedmapper.aw",

  "depends": {
    "java": ">=23",
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=0.37.1",
    "minecraft": ">=1.21.5 <1.22",
    "betterconfig": "*",
    "clientarguments": "*"
  }
}
